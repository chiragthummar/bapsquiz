<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2.0dip" android:color="@color/emerald" />
            <solid android:color="@color/emerald" />
            <corners android:radius="0.0dip" />
        </shape>
    </item>
    <item>
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2.0dip" android:color="@color/green" />
            <solid android:color="@color/green" />
            <corners android:radius="0.0dip" />
        </shape>
    </item>
</selector>